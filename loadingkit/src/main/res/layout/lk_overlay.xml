<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lkRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lk_overlay_dim">

    <LinearLayout
        android:id="@+id/lkCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="18dp">

        <FrameLayout
            android:id="@+id/lkRendererHost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lkMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Loading..."
            android:textSize="14sp"
            android:gravity="center"
            android:textAlignment="center"
            android:maxWidth="560dp"
            android:singleLine="false"
            android:maxLines="4"
            android:ellipsize="end"
            android:visibility="gone"
            tools:text="Loading long message preview that should wrap correctly across multiple lines." />

    </LinearLayout>

</FrameLayout>
